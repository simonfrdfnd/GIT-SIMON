<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapAlarm.MainPage"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             Title="Map Alarm" Appearing="OnAppearing">

  <StackLayout>
    <Grid Margin="0,5,10,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="8*"/>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="2*"/>
      </Grid.ColumnDefinitions>
      <Button Text="+" Grid.Column="1" CornerRadius="20" Clicked="OnAdd" x:Name="btnPlus" />
      <Button Text="Del." Grid.Column="2" CornerRadius="20" Clicked="OnDel" x:Name="btnDel"/>
    </Grid>
    <StackLayout x:Name="layout"/>
  </StackLayout>
</ContentPage>