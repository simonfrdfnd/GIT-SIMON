<UserControl x:Class="NexioMax3.Definition.View.VisaConsoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NexioMax3.Definition.View"
             xmlns:controls="clr-namespace:Nexio.Wpf.Controls;assembly=Nexio.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <StackPanel>
      <Label FontSize="16">Text mode</Label>
      <controls:ComboBox SelectedItem="{Binding DisplayMode}">
        <ComboBoxItem IsSelected="True">Ascii</ComboBoxItem>
        <ComboBoxItem>Ascii/Hex</ComboBoxItem>
      </controls:ComboBox>
      <Label FontSize="16">Visa address</Label>
      <controls:ComboBox IsEditable="True" IsEnabled="{Binding EnableAddress}" ItemsSource="{Binding Addresses, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    Text="{Binding SelectedAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
      </controls:ComboBox>
      <Label FontSize="16" Margin="0,10,0,0">Write EOS</Label>
      <controls:ComboBox ItemsSource="{Binding EosChars}" Text="{Binding SelectedEosWrite}" IsEditable="True" SelectedIndex="0"></controls:ComboBox>
      <Label FontSize="16" Margin="0,10,0,0">Read EOS</Label>
      <controls:ComboBox IsEnabled="{Binding EnableEosRead}" ItemsSource="{Binding EosChars}" Text="{Binding SelectedEosRead}" IsEditable="True" SelectedIndex="0"></controls:ComboBox>
      <Label FontSize="16" Margin="0,10,0,0">Timeout (ms)</Label>
      <controls:TextBox FontSize="16" IsEnabled="{Binding EnableTimeout}" Text="{Binding Timeout, Mode=TwoWay}"></controls:TextBox>
      <Label FontSize="16" Margin="0,10,0,0">Buffer Size</Label>
      <controls:TextBox FontSize="16" IsEnabled="{Binding EnableBuffer}" Text="{Binding BufferSize, Mode=TwoWay}"></controls:TextBox>
      <WrapPanel Margin="0,10,0,0">
        <controls:Button Command="{Binding OpenCommand}" IsEnabled="{Binding EnableOpen}">Open</controls:Button>
        <controls:Button Command="{Binding CloseCommand}" Margin="10,0,0,0" IsEnabled="{Binding EnableClose}">Close</controls:Button>
        <controls:Button Command="{Binding ScanCommand}" Margin="10,0,0,0" IsEnabled="{Binding EnableScan}">Scan GPIB</controls:Button>
      </WrapPanel>
    </StackPanel>

    <local:TerminalView Grid.Column="1" Margin="10,0,10,10"/>
  </Grid>
</UserControl>
