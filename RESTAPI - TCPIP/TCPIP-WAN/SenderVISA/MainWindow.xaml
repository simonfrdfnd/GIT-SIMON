<Window x:Class="SenderVISA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SenderVISA"
        mc:Ignorable="d"
        Title="Sender" Height="170" Width="290">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="80"></ColumnDefinition>
      <ColumnDefinition Width="190"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"></RowDefinition>
      <RowDefinition Height="30"></RowDefinition>
      <RowDefinition Height="30"></RowDefinition>
    </Grid.RowDefinitions>
    <Label>Visa address :</Label>
    <TextBox x:Name="visaRessource" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" TextWrapping="Wrap" Text="TCPIP0::127.0.0.1::inst0::INSTR" Width="190"/>
    <Label Grid.Row="1">Data</Label>
    <TextBox x:Name="data" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="abcde" VerticalAlignment="Center" Width="120"/>
    <Button Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Width="100" Content="GO" Click="OnClick"></Button>
  </Grid>
</Window>
